<nav class="rujo-nav" style="background: {{ section.settings.background_color }}; border-bottom: 1px solid rgba(201,168,76,0.12); padding: 0 40px; font-family: 'Karla', 'Helvetica Neue', sans-serif;">
  <div class="rujo-nav-inner" style="max-width: 1400px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between; height: 64px;">

    <a href="{{ section.settings.home_url }}" class="rujo-nav-logo" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.65rem; font-weight: 400; letter-spacing: 0.3em; text-transform: uppercase;">{{ section.settings.brand_name }}</a>

    <ul class="rujo-nav-links" style="list-style: none; margin: 0; padding: 0; display: flex; align-items: center; gap: 40px;">
      <li><a href="{{ section.settings.link_1_url }}" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">{{ section.settings.link_1_label }}</a></li>
      <li><a href="{{ section.settings.link_2_url }}" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">{{ section.settings.link_2_label }}</a></li>
      <li><a href="{{ section.settings.link_3_url }}" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">{{ section.settings.link_3_label }}</a></li>
      <li><a href="{{ section.settings.link_4_url }}" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">{{ section.settings.link_4_label }}</a></li>
      <li><a href="{{ section.settings.link_5_url }}" style="color: {{ section.settings.gold_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">{{ section.settings.link_5_label }}</a></li>
      <li><a href="{{ section.settings.link_6_url }}" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">{{ section.settings.link_6_label }}</a></li>
    </ul>

    <a href="/cart" class="rujo-nav-cart" style="color: {{ section.settings.text_color }}; text-decoration: none; font-size: 0.62rem; font-weight: 400; letter-spacing: 0.22em; text-transform: uppercase;">Cart ({{ cart.item_count }})</a>

  </div>
</nav>

<style>
  .rujo-nav-links a:hover { color: {{ section.settings.gold_color }} !important; }
  @media (max-width: 768px) {
    .rujo-nav-links { display: none !important; }
    .rujo-nav-inner { justify-content: space-between; }
  }
</style>

