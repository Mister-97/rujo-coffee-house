{% assign shop_url = section.settings.shop_url | default: 'https://mister-97.github.io/rujo-coffee-house/shop.html' %}

<section class="rujo-continue-shopping" style="background: {{ section.settings.background_color }}; border-top: 1px solid rgba(201,168,76,0.18); border-bottom: 1px solid rgba(201,168,76,0.18); padding: {{ section.settings.vertical_padding }}px 40px; font-family: 'Karla', 'Helvetica Neue', sans-serif;">
  <div class="rujo-cs-inner" style="max-width: 1100px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between; gap: 24px; flex-wrap: wrap;">
    <div class="rujo-cs-text">
      <p style="font-size: 0.62rem; letter-spacing: 0.4em; text-transform: uppercase; color: {{ section.settings.gold_color }}; margin: 0 0 6px;">{{ section.settings.eyebrow_text }}</p>
      <p style="font-family: 'Cormorant Garamond', Georgia, serif; font-size: 1.5rem; font-weight: 300; color: {{ section.settings.headline_color }}; margin: 0; line-height: 1.25;">{{ section.settings.headline_text }}</p>
    </div>
    <a href="{{ shop_url }}" target="_blank" rel="noopener" class="rujo-cs-btn" style="display: inline-flex; align-items: center; gap: 10px; padding: 14px 32px; background: transparent; border: 1px solid {{ section.settings.gold_color }}; color: {{ section.settings.gold_color }}; font-family: 'Karla', 'Helvetica Neue', sans-serif; font-size: 0.7rem; font-weight: 500; letter-spacing: 0.22em; text-transform: uppercase; text-decoration: none; white-space: nowrap; cursor: pointer;">
      {{ section.settings.button_text }}
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
    </a>
  </div>
</section>

<style>
  .rujo-cs-btn:hover {
    background: {{ section.settings.gold_color }} !important;
    color: {{ section.settings.background_color }} !important;
  }
</style>

{% schema %}
{
  "name": "Rujo — Continue Shopping",
  "tag": "section",
  "class": "rujo-continue-shopping-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Rujo Coffee House"
    },
    {
      "type": "text",
      "id": "headline_text",
      "label": "Headline",
      "default": "Discover the full collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Label",
      "default": "Shop All Coffees"
    },
    {
      "type": "url",
      "id": "shop_url",
      "label": "Shop Page URL"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0A0A0A"
    },
    {
      "type": "color",
      "id": "gold_color",
      "label": "Accent / Gold Color",
      "default": "#C9A84C"
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline Text Color",
      "default": "#F5F0E8"
    },
    {
      "type": "range",
      "id": "vertical_padding",
      "label": "Vertical Padding (px)",
      "min": 16,
      "max": 80,
      "step": 4,
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Rujo — Continue Shopping"
    }
  ]
}
{% endschema %}
